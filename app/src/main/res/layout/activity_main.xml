<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context="br.com.ericksimoes.endyearsparty.views.MainActivity">

    <TextView
        android:id="@+id/text_label_today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/today"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text_today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/text_label_today"
        android:textSize="25sp" />

    <view
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/text_label_today"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary" />

    <TextView
        android:id="@+id/text_label_days_laft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_label_today"
        android:textSize="20sp"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:text="@string/days_remaining" />

    <TextView
        android:id="@+id/text_days_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
